@model The_Test.Models.BookingVM

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <h1>Details</h1>

    <div>
        <h4>BookingVM</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PickUpTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PickUpTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FromAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FromAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ToAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ToAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsPaid)
            </dt>
            <dd class="col-sm-10">

                @if (Model.IsPaid)
                {
                    <i class="fas fa-check-circle text-success"></i>

                }
                else
                {
                    <i class="fas fa-times-circle text-danger"></i>

                }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Driver)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Driver)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Car)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car)
            </dd>
        </dl>
    </div>


    <div class="row">
        <h4>Passengers</h4>
        <table id="BookingPassengers" class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Gender</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var passenger in Model.Passenger)
                {
                    <tr>
                        <td>@passenger.Id</td>
                        <td>@passenger.Name</td>
                        <td>@passenger.Email</td>
                        <td>@passenger.PhoneNumber</td>
                        <td>@passenger.Gender</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
