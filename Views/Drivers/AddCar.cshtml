@model The_Test.Models.Driver.CreateEditDriverVM


@{
    ViewData["Title"] = "Add Car";
}

<div class="container my-5">
    <h1>Add Course</h1>

    <h4>Driver: @Model.DriverName</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddCar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.CarSelectList.Count() > 0)
                {
                    <div class="form-group">
                        <label asp-for="Id" class="control-label">Car</label>
                        <select asp-for="Id" asp-items="@Model.CarSelectList" class="form-control"></select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                }
                else
                {
                    <h4>
                        There is no courses left to enroll in
                    </h4>
                }

                <input type="hidden" value="@Model.DriverId" name="DriverId" />
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
